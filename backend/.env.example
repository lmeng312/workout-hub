# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/fitcommunity

# Server Configuration
PORT=3000

# Auth (required for JWT and refresh tokens)
JWT_SECRET=your_long_random_jwt_secret_here

# Email (verification + password reset)
# If not set, verification/reset emails are logged to console only
APP_NAME=FitCommunity
# BASE_URL must be the URL where this server is reachable when users open the link (no /api).
# - Same network / physical device: use your machine IP, e.g. http://192.168.6.40:3000
# - Production: use your API host, e.g. https://api.yourdomain.com
# Using localhost here means reset/verify links will only work on the same machine.
BASE_URL=http://localhost:3000
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
EMAIL_FROM=noreply@yourdomain.com

# External APIs
YOUTUBE_API_KEY=your_youtube_api_key_here

# Note: Copy this file to .env and fill in your actual credentials
# Never commit the .env file to git!
